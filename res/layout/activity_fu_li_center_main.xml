<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayoutMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvNewGoods"
            style="@style/my_menu_item_style"
            android:text="新品"

            android:drawableTop="@drawable/menu_item_new_good_normal"
            />
        <TextView
            android:id="@+id/tvBoutique"
            style="@style/my_menu_item_style"
            android:text="精选"
            android:drawableTop="@drawable/boutique_normal"
            />
        <TextView
            android:id="@+id/tvCategory"
            style="@style/my_menu_item_style"
            android:text="分类"
            android:drawableTop="@drawable/menu_item_category_normal"
            />
        <TextView
            android:id="@+id/tvCollect"
            style="@style/my_menu_item_style"
            android:text="收藏"
            android:drawableTop="@drawable/menu_item_collect_normal"
            />
        <RelativeLayout
            android:id="@+id/layoutCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@drawable/menu_item_cart_normal"
                android:text="购物车"
                android:textColor="#000"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/bg_hint"
                android:text="10"
                android:textSize="15sp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvContacts"
            style="@style/my_menu_item_style"
            android:text="我"
            android:drawableTop="@drawable/menu_item_personal_center_normal"
            />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_above="@+id/linearLayoutMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


</RelativeLayout>
