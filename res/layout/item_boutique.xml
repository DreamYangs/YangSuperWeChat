<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_boutique_item"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >
    <ImageView
        android:id="@+id/iv_boutique_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nopic"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:id="@+id/layout_all_desc"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_toRightOf="@id/iv_boutique_image"
        android:background="@color/white"
        android:gravity="top"
        >
        <TextView
            android:id="@+id/tv_boutique_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_title"
            android:layout_marginTop="20dp"
            android:text="title"
            android:textSize="18sp"

            />
        <TextView
            android:id="@+id/tv_boutique_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_name"
            android:layout_marginTop="20dp"
            android:text="name"
            android:textSize="18sp"

            />
        <TextView
            android:id="@+id/tv_boutique_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_des"
            android:layout_marginTop="20dp"
            android:text="desc"
            android:textSize="18sp"
            />

    </LinearLayout>


</RelativeLayout>