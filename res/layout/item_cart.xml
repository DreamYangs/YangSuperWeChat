<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/layout_cart_item"
    >
    <CheckBox
        android:id="@+id/cb_cart_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/CustomCheckboxTheme"
        android:layout_marginLeft="10dp"
        android:checked="true"
        />
    <ImageView
        android:id="@+id/iv_cart_thumb"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/cb_cart_selected"
        android:src="@drawable/goods_thumb"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv_cart_good_name"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="衬衣衬衣衬衣衬衣衬衣"
        android:textColor="#f90"
        android:textSize="18sp"
        android:layout_toRightOf="@id/iv_cart_thumb"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:ellipsize="end"
        />
    <ImageView
        android:id="@+id/iv_cart_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_cart"
        android:layout_toRightOf="@id/iv_cart_thumb"
        android:layout_below="@id/tv_cart_good_name"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/tv_cart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cart_good_name"
        android:layout_toRightOf="@id/iv_cart_add"
        android:text="(4)"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        />
    <ImageView
        android:id="@+id/iv_cart_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/del_cart"
        android:layout_toRightOf="@id/tv_cart_count"
        android:layout_below="@id/tv_cart_good_name"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/tv_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="￥88.88"
        android:textColor="#f90"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        />

</RelativeLayout>