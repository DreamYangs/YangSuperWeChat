<?xml version ="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_orange"
        >
        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/main_orange"
            >
            <LinearLayout
                android:id="@+id/backClickArea"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_common_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/backClickArea"
                >
                <TextView
                    android:id="@+id/tv_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品详情"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </RelativeLayout>
        <cn.ucai.fulicenter.view.CatChildFilterButton
            android:id="@+id/btnCatChildFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/arrow2_up"
            android:background="@null"
            android:textColor="@color/white"
            android:text="分类"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/orange"
        >
        <Button
            android:id="@+id/btn_sort_price"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="价格"
            android:background="@null"
            android:paddingRight="5dp"
            android:drawableRight="@drawable/arrow_order_down"
            />
        <Button
            android:id="@+id/btn_sort_add_time"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="上架时间"
            android:background="@null"
            android:paddingRight="5dp"
            android:drawableRight="@drawable/arrow_order_down"
            />

    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_category_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/list_background"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include layout="@layout/common_refresh_hint" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_category_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
